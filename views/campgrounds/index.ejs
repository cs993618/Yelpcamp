<% include ../partials/header %>


<div class="container">
    

    <header class="jumbotron">
        <div class="container">
            <h1>Hi, this is the campgrounds page!</h1>
            <p>Now all over the world can see this campground! :)</p>
            <p>
                   <a class="btn btn-primary btn-lg" href="/campground/new">Add New</a>
                   <a class="btn btn-primary btn-lg" href="../landing">HomePage</a>
            </p>
        </div>
    </header>
    
    <div class="row" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src=" <%= campground.image %>">
                    <div>
                        <h4 align="center"><%= campground.name %></h4>
                        
                    </div>
                    <div class="info">
                        <p>$<%=campground.price%>/night</p>
                        <a href="/campground/<%= campground._id %>" class="btn btn-primary">More info</a>
                    </div>

                </div>
            </div>
        <% }); %>
    </div>
</div>
    
    

<% include ../partials/footer %>